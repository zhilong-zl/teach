<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/tv_shortcuts_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_shortcuts_1"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="训练营"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fl_shortcuts_2"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl_shortcuts_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_shortcuts_1"
        app:layout_constraintRight_toLeftOf="@id/tv_shortcuts_3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_shortcuts_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_shortcuts_2"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="精品课"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_shortcuts_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_shortcuts_6"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="图片库"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_shortcuts_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_shortcuts_3"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="论坛"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fl_shortcuts_2"
        app:layout_constraintRight_toLeftOf="@id/tv_shortcuts_4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_shortcuts_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_shortcuts_4"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="问答"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_shortcuts_3"
        app:layout_constraintRight_toLeftOf="@id/tv_shortcuts_5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_shortcuts_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_shortcuts_5"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="礼品"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_shortcuts_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4da0a0a0"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>