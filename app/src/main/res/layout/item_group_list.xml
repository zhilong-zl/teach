<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@drawable/live_bg_shape">

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:textColor="@color/fontColor333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_number"
        app:layout_constraintLeft_toRightOf="@+id/iv_thumb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="中国建筑中国建筑中国建筑" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_people_count"
        android:drawablePadding="2dp"
        android:textColor="@color/colorGray999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toTopOf="@+id/tv_desc"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="24W关注" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:textColor="@color/fontColor333"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_focus"
        app:layout_constraintTop_toBottomOf="@+id/tv_number"
        tools:text="我国古代的建筑艺术也是美术减伤的重要巴拉巴拉巴拉" />

    <TextView
        android:id="@+id/tv_focus"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="+ 关注"
        android:textColor="@color/mine_selector"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/attention_selector"/>
</androidx.constraintlayout.widget.ConstraintLayout>